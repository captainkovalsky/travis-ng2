{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "module": "es2015",
        "moduleResolution": "node",
        "paths": {
            "@angular/core": [
                "node_modules/@angular/core"
            ],
            "rxjs/*": [
                "node_modules/rxjs/*"
            ],
            "zone.js/": [
                "node_modules/zone.js/*"
            ]
        },
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "files": [
        "index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
